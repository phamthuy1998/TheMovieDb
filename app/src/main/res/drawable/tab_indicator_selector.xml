<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:innerRadius="0dp" android:shape="ring" android:thickness="@dimen/tabIndicatorSelected" android:useLevel="false">
            <solid android:color="@color/tabIndicatorSelected" />
            <size android:height="@dimen/tabIndicatorSelected" />
            <stroke android:width="0.5dp" android:color="@color/tabIndicator"/>
        </shape>
    </item>

    <item>
        <shape android:innerRadius="0dp" android:shape="ring" android:thickness="@dimen/tabIndicator" android:useLevel="false">
            <solid android:color="@color/tabIndicator" />
            <size android:height="@dimen/tabIndicator" />
            <stroke android:width="0.5dp" android:color="@color/tabIndicatorSelected"/>
        </shape>
    </item>
</selector>