<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextTitle.16" parent="TextTitle">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Shadow">
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:shadowColor">@color/textColor1Shadow</item>
    </style>

    <style name="TextTitle.Shadow" parent="Shadow">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle.Shadow.Selectable" parent="TextTitle.Shadow">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text14.Shadow" parent="Shadow">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Text14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextPersonInfo" parent="Text14">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:lineSpacingExtra">12dp</item>
    </style>

    <style name="TextGenre" parent="Text14">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/bg_round_corner</item>
        <item name="android:backgroundTint">@color/bg_genres</item>
    </style>

    <style name="TextRating" parent="Text14">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">4dp</item>
    </style>

    <style name="TextItemTitle" parent="Text14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Progressbar">
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="tabSelectedTextColor">@color/text_selected_tab_layout_color</item>
        <item name="tabTextColor">@color/text_tab_layout_color</item>
        <item name="tabIndicatorColor">@color/text_selected_tab_layout_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabGravity">center</item>
        <item name="tabBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>


    <style name="TabIndicator" >
        <item name="tabGravity">center</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabIndicator">@null</item>
        <item name="tabPaddingStart">@dimen/tabPadding</item>
        <item name="tabPaddingEnd">@dimen/tabPadding</item>
        <item name="tabBackground">@drawable/tab_indicator_selector</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Selectable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextPersonalItem" parent="Text16">
        <item name="android:background">@drawable/bg_ripple</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_right</item>
        <item name="android:clickable">true</item>
        <item name="android:selectable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_l</item>
        <item name="android:paddingVertical">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
    </style>

</resources>