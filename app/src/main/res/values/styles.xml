<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Shadow">
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:shadowColor">@color/textColor1Shadow</item>
    </style>

    <style name="TextTitle.Shadow" parent="Shadow">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text14.Shadow" parent="Shadow">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="Text16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Text14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextPersonInfo" parent="Text14">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:lineSpacingExtra">12dp</item>
    </style>

    <style name="TextGenre" parent="Text14">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/bg_round_corner</item>
        <item name="android:backgroundTint">@color/bg_genres</item>
    </style>

    <style name="TextRating" parent="Text14">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">8dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">4dp</item>
    </style>

    <style name="TextItemTitle" parent="Text14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Progressbar">
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="TabLayout">
        <item name="tabSelectedTextColor">@color/text_selected_tab_layout_color</item>
        <item name="tabTextColor">@color/text_tab_layout_color</item>
        <item name="tabIndicatorColor">@color/text_selected_tab_layout_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabGravity">center</item>
        <item name="tabBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
    </style>

</resources>