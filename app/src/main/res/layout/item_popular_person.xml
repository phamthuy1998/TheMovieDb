<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/iv_person_avt_height"
        android:layout_height="@dimen/item_rc_popular_height"
        android:layout_marginEnd="@dimen/default_margin"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivAvt"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/iv_person_avt_height"
            android:layout_height="@dimen/iv_person_avt_height"
            app:riv_corner_radius="@dimen/iv_person_avt_radius"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvPersonName"
            style="@style/TextItemTitle"
            android:layout_width="@dimen/iv_person_avt_height"
            android:layout_height="@dimen/item_title_avt_height"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center|top"
            android:lines="2"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMovie"
            tools:text="Movie title" />

    </LinearLayout>
</layout>